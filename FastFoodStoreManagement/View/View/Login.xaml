<Window x:Class="View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left Side: Welcome Text -->
        <Grid Background="White" Grid.Column="0">
            <TextBlock Text="Fastfood Management"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="Black"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </Grid>

        <!-- Right Side: Login Panel -->
        <Grid Background="Gray" Grid.Column="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <!-- Header -->
                <Border Background="MediumPurple" Padding="15" Margin="0,0,0,20">
                    <TextBlock Text="Login" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                </Border>

                <!-- Username Label -->
                <TextBlock Text="Username"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,5"/>

                <!-- Username Input -->
                <TextBox x:Name="txtUsername"
                         Height="32"
                         FontSize="16"
                         Background="DeepSkyBlue"
                         Foreground="Black"
                         Margin="0,0,0,20"/>

                <!-- Password Label -->
                <TextBlock Text="Password"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,5"/>

                <!-- Password Input -->
                <PasswordBox x:Name="txtPassword"
                             Height="40"
                             FontSize="16"
                             Background="DeepSkyBlue"
                             Foreground="Black"
                             Margin="0,0,0,20"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Height="40"
                        Background="Tomato"
                        Foreground="White"
                        FontWeight="Bold"
                        Width="120"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
